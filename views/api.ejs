        <!DOCTYPE html>
        <!-- Created By CodingLab - www.codinglabweb.com -->
        <html lang="en" dir="ltr">
          <head>
            <meta charset="UTF-8">
            <!---<title> Responsive Registration Form | CodingLab </title>--->
            <link rel="stylesheet" href="style.css">
             <meta name="viewport" content="width=device-width, initial-scale=1.0">
           </head>
        <body>
          <div class="container">
            <div class="title">Registration</div>
            <div class="content">
              <form action="" onsubmit="return s()" enctype="multipart/form-data">
                <div class="user-details">
                  <div class="input-box">
                    <span class="details">Full Name</span>
                    <input type="text" placeholder="Enter your name" id="name" required>
                  </div>
                  
                  <div class="input-box">
                    <span class="details">Email</span>
                    <input type="text" placeholder="Enter your email" id="email" required>
                  </div>
                  <div class="input-box">
                    <span class="details">Phone Number</span>
                    <input type="text" placeholder="Enter your number" id="phone" required>
                  </div>
                  <div class="input-box">
                    <span class="details">address</span>
                    <input type="text" placeholder="Enter your password" id="address" required>
                  </div>
                  <div class="form-group">

                    <label>joining date</label>
                    <input type="date" id="dat" name="joindate"  class="form-control" >
                </div>
                <div class="form-group">

                    <label>image</label>
                    <input type="file"  id="file" name="fileee" class="" >
                </div>
                <div class="form-group">
                    <label for="cars">Choose a class:</label>
                    <select id="class" name="class" class="form-control">
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                      <option value="6">6</option>
                      <option value="7">7</option>
                      <option value="8">8</option>
                      <option value="9">9</option>
                      <option value="10">10</option>
                      <option value="11">11</option>
                      <option value="12">12</option>
                      <option value="C">C language course</option>
                      <option value="jnv">jnv</option>
                    </select>
                </div>

                </div>
                
                <div class="button">
                  <input type="submit" value="Register">
                </div>
              </form>
            </div>
          </div>
        
        </body>
        </html>
        
        <script>
           function s(){
            
             const name=document.getElementById("name").value;
             const email=document.getElementById("email").value;
             const address=document.getElementById("address").value;
             const phone=document.getElementById("phone").value;
             const dat=document.getElementById("dat").value;
             const classe=document.getElementById("class").value;
             const filen=document.getElementById("file").files[0];
            //console.log(filen);
           let options={
                        method:"POST",
                        headers:{
                              "Content-type":"application/json"
                  
                        },
                        body: JSON.stringify({
                              name: name,
                              email: email,
                              address: address,
                              phone :phone,
                              date :dat,
                              class:classe,
                              filee:filen,
                              fee:290,
                            }),
                  }
                  fetch('http://localhost:8000/insert/users', options)
                  .then((response) =>response.json())
                  .then((json) =>console.log(json));
               //return false;
           }
        </script>
    </body>
</html>